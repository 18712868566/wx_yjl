.integral {
    background: #5e86a1;
    width: 100%;
    min-height: 100vh;
}

.integral_bg {
    width: 100%;
    height: 430rpx;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 0;
}

.integral_bg .integral_banner {
    display: block;
    width: 100%;
}

.integral_lott {
    position: relative;
    z-index: 2;
    min-height: 900rpx;
    background: #eff0f4;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    padding: 40rpx 28rpx;

    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}


.lott_box {
    width: 308rpx;
    height: 378rpx;
    background: #fff;
    margin: 20rpx 15rpx;
    border-radius: 15rpx;
    box-shadow: 0rpx 0rpx 3rpx rgba(0, 0, 0, .2), -3rpx 6rpx 8rpx rgba(0, 0, 0, .2);
}

.lott_box .lottImg {
    display: block;
    width: 282rpx;
    height: 282rpx;
    margin: 14rpx auto 0;
    border-radius: 20rpx;
    border: 1rpx solid #e7e7e7;
}

.lottName {
    color: #313131;
    font-size: 22rpx;
    padding: 5rpx 15rpx 0;

}

.lottMsg {
    padding: 10rpx 15rpx 0;
    display: flex;
    justify-content: space-between;
}

.lottMsg .lottNumber,
.lottMsg .lottStock {
    font-size: 20rpx;
    color: #7b7b7b;
}


/* 获取头像昵称 */

.integral_user {
    width: 90%;
    height: 250rpx;
    margin: 0 auto;
    position: relative;
    z-index: 2;
    display: flex;
    justify-content: space-between;
    align-items: center;
}


.userinfo {
    width: 90%;
    margin: 0 auto;
    color: #aaa;
}


.userinfo .name {
    position: absolute;
    top: 95rpx;
    left: 210rpx;
    color: #fff;
    font-size: 24rpx;
}

.userinfo-avatar {
    overflow: hidden;
    width: 148rpx;
    height: 148rpx;
    margin: 20rpx;
    border-radius: 50%;
    border: 4px solid #fff;
}

.userinfo-global-nmber {
    color: #fff;
    font-size: 24rpx;
    text-decoration: underline;
    padding-bottom: 5rpx;
    position: absolute;
    top: 125rpx;
    left: 210rpx;
}

.usermotto {
    margin-top: 200px;
}

.getIntegral {
    width: 140rpx;
    height: 50rpx;

}