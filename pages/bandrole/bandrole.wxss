/* @import "../../lib/weui.wxss"; */


.band-role {
    position: relative;
    width: 100%;
    height: 100vh;
    background: #eff0f4;
    overflow: hidden;
}


.btn-band {
    display: block;
    width: 100%;
    height: 110rpx;
    line-height: 110rpx;
    text-align: center;
    color: #fff;
    font-size: 36rpx;
    font-weight: bold;
    position: fixed;
    bottom: 0;
    background: #ff7f21;
}


.bandtitle {
    display: block;
    text-align: center;
    color: #313131;
    font-size: 28rpx;
    margin-top: 50rpx;
}

.bandmintitle {
    display: block;
    text-align: center;
    color: #707070;
    font-size: 24rpx;
    margin-top: 5rpx;
    width: 100%;
    height: 38rpx;

}



.bandlott {
    display: inline-block;
    width: 30rpx;
    height: 30rpx;
    position: relative;
    top: 5rpx;
}


.form {
    padding: 50rpx 28rpx 0;
    position: relative;
}

.page-section {
    margin-top: 20rpx;
}

.weui-cells {
    width: 450rpx;
    height: 80rpx;
    background: #fff;
    border-radius: 15rpx;
}

.weui-input {
    display: block;
    line-height: 80rpx;
    height: 80rpx;
    padding: 0 15rpx;
    font-size: 26rpx;
}

.weui-cells__title {
    margin-top: 10rpx;
    color: #999999;
    font-size: 18rpx;
    padding-left: 10rpx;
}


.picker {
    color: #9a9a9a;
    font-size: 26rpx;
}


.max-weui-cells {
    width: 100%;
    height: 80rpx;
}


.btn-getRoleInfo {
    width: 200rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 26rpx;
    color: #fff;
    position: absolute;
    top: 140rpx;
    right: 40rpx;
    background: #ff7f21;
    border-radius: 15rpx;
}