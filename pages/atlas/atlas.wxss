.atlas {
    background: #5e86a1;
    width: 100%;
    min-height: 100vh;
}

.atlas_bg {
    width: 100%;
    height: 430rpx;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 0;
}

.atlas_bg .atlas_banner {
    display: block;
    width: 100%;
}

.atlas_center {
    position: relative;
    z-index: 2;
    min-height: 900rpx;
    background: #fff;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    padding: 20rpx 45rpx 40rpx;
}

._header {
    display: flex;
    justify-content: space-between;
    text-align: center;
    font-size: 20rpx;
}

._header text {
    margin-top: 5rpx;
    display: block;
}

._header .after {
    position: relative;
}

._header .after:after {
    content: '';
    display: block;
    width: 2rpx;
    height: 36rpx;
    background: #c9c8c8;
    position: absolute;
    top: 15rpx;
    right: -30rpx;
}

._header .after:last-child::after {
    display: none;
}

.tabpic {
    display: block;
    width: 40rpx;
    height: 40rpx;
    margin: 0 auto;
}

.content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    text-align: center;
    padding-top: 40rpx;
}

.content .hero-item {
    width: 146rpx;
    height: 216rpx;
    margin-bottom: 20rpx;
    position: relative;
    overflow: hidden;
}

.posTips {
    width: 96rpx;
    height: 82rpx;
    display: block;
    position: absolute;
    top: -20rpx;
    left: -20rpx;
    z-index: 2;
}

.posTips image {
    display: block;
    width: 100%;
    height: 100%;
}

.heroImg {
    display: block;
    width: 100%;
    height: 100%;
}

.hero-item image.noget {
    filter: grayscale(100%);
}

/* 获取头像昵称 */

.userinfo {
    text-align: center;
    margin-top: 50rpx;
}

.integral_user {
    width: 90%;
    height: 320rpx;
    margin: 0 auto;
    position: relative;
    z-index: 2;
    display: flex;
    justify-content: center;
}


.userinfo .name {
    color: #fff;
    font-size: 24rpx;
    text-align: center;
}

.userinfo-avatar {
    overflow: hidden;
    width: 148rpx;
    height: 148rpx;
    margin: 5rpx;
    border-radius: 50%;
    border: 4px solid #fff;
}

.band_userid {
    width: 100%;
    text-align: center;
    position: absolute;
    bottom: 30rpx;
    color: #fff;
    font-size: 20rpx;
}