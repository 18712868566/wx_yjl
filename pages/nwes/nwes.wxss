/* pages/nwes/nwes.wxss */
.nwes-banner {
    height: 380rpx;
    width: 100%;
}

.swiper {
    height: 100%;
    width: 100%;
}

.swiper-item {
    display: block;
    height: 100%;
    width: 100%;
    margin: 0 auto;
}

.le-img {
    width: 100%;
    height: 100%;
    margin: 0 auto;
    display: block;
}

.le-img.le-active {
    transform: scale(1);
}

/* swiper 组件样式修改 */
/* 修改dot形状 */
swiper .wx-swiper-dots {
    bottom: 13rpx;
}

swiper .wx-swiper-dots .wx-swiper-dot {
    width: 10rpx;
    height: 10rpx;
    border-radius: 50%;
    background: #fff;
    opacity: 1;
}

swiper .wx-swiper-dots .wx-swiper-dot.wx-swiper-dot-active {
    background: #000;
    opacity: 1;
}

/* 修改dot之间的间距 */
swiper .wx-swiper-dots .wx-swiper-dot:nth-of-type(n+2) {
    margin-left: 8rpx;
}

.news-lists{
    display: flex;
}